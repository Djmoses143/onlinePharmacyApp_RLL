<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        

        .container a {
            color: white;
            text-decoration: none;
        }

        h3 {
            color: white;
        }

        body {
            background-image: url('../../images/layout_1 bg.jpg');
        }

        .form-group {
            background-color:lightblue;
            
        }
    </style>
    @Scripts.Render("~/bundles/BackButtonDisable")
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-light">
        <div class="container" style="background-color: cadetblue ">
            <h3>Pharmacy App</h3>&nbsp; &nbsp;&nbsp;&nbsp;
            
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    
                    <li>@Html.ActionLink("Medicine List", "MedicineList", "Admin")</li> &nbsp; &nbsp;&nbsp;&nbsp;
                    <li>@Html.ActionLink("Add Medicine", "AddMedicine", "Admin")</li>  &nbsp; &nbsp;&nbsp;&nbsp;
                    <li>@Html.ActionLink("Customer List", "CustomerList", "Admin")</li>&nbsp; &nbsp;&nbsp;&nbsp;
                    <li>@Html.ActionLink("Add Customer", "AddCustomer", "Admin")</li>&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;
                    <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
</body>
</html>
